<div class="slice">

  <div class="title">Horários</div>

  <div class="formGroup">
    <label for="dataEvento">Data do Evento:</label>
    <input type="date" name="dataEvento" required>

  </div>



  <div class="period">
    <div class="formGroup">
      <label for="inicio">Início do Evento:</label>
      <select name="inicio" id="">
        <option value="">Selecione ...</option>
        <% horaInicio.map(item=> { %>
          <option value="<%= item.value %>">
            <%= item.label %>
          </option>
          <% }) %>
      </select>
    </div>
    <div class="formGroup">
      <label for="fim">Término do Evento:</label>
      <select name="fim" id="">
        <option value="">Selecione ...</option>
        <% horaFim.map(item=> { %>
          <option value="<%= item.value %>">
            <%= item.label %>
          </option>
          <% }) %>
      </select>
    </div>
  </div>

  



</div>